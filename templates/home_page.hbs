</section>


  <div class="container">
    
    <section class="section knowledge-base">
    <h2 class="cat-title">Browse {{ t 'categories' }}</h2>
    <section class="categories blocks">
      <ul class="blocks-list">
        {{#each categories}}
          {{#if ../has_multiple_categories}}
            <li class="blocks-item">
              <a href='{{url}}' class="blocks-item-link">
                {{#is id 360004737234}}<img class="icon-homepage" src="{{asset 'icon-coltrane.svg'}}" />{{/is}}
                 {{#is id 360005785593}}<img class="icon-homepage" src="{{asset 'icon-video.svg'}}" />{{/is}}
             {{#is id 360005785513}}<img class="icon-homepage" src="{{asset 'icon-fulll-service.svg'}}" />{{/is}}
                 {{#is id 360004737454}}<img class="icon-homepage" src="{{asset 'icon-developer.svg'}}" />{{/is}}
                  {{#is id 360004737434}}<img class="icon-homepage" src="{{asset 'icon-security.svg'}}" />{{/is}}
                <span class="blocks-item-title">{{name}}</span>
                <span class="blocks-item-description">{{excerpt description}}</span>
              </a>
            </li>
          {{else}}
            {{#each sections}}
              <li class="blocks-item">
                <a href='{{url}}' class="blocks-item-link">
                   {{#is id 360011805253}}<img class="icon-homepage" src="{{asset 'icon-get-started-1.svg'}}" />{{/is}}
                 {{#is id 360011805273}}<img class="icon-homepage" src="{{asset 'icon-general2.svg'}}" />{{/is}}
                       {{#is id 360011805333}}<img class="icon-homepage" src="{{asset 'icon-troubleshooting.svg'}}" />{{/is}}
                  <span class="blocks-item-title">
                    {{name}}
                  </span>
                  <span class="blocks-item-description">{{excerpt description}}</span>
                </a>
              </li>
            {{/each}}
          {{/if}}
        {{/each}}
      </ul>
      {{pagination}}
    </section>

    {{#if promoted_articles}}
      <section class="articles" style="margin-top:3rem;">
        <h2  class="cat-title">{{t 'promoted_articles'}}</h2>
        <ul class="article-list promoted-articles">
          {{#each promoted_articles}}
            <li class="promoted-articles-item">
                <a href="{{url}}">
                  {{title}}

                  {{#if internal}}
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" focusable="false" viewBox="0 0 16 16" class="icon-lock" title="{{t 'internal'}}">
                      <rect width="12" height="9" x="2" y="7" fill="currentColor" rx="1" ry="1"/>
                      <path fill="none" stroke="currentColor" d="M4.5 7.5V4a3.5 3.5 0 017 0v3.5"/>
                    </svg>
                  {{/if}}
                </a>
            </li>
          {{/each}}
        </ul>
      </section>
    {{/if}}
  </section>
    
    
    
    
    
    
    
     
</div>


